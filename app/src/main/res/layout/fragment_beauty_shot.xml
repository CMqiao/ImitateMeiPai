<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_group_course_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_beauty_shot_tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ll_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBgTopTab"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_beauty_shot_tab"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:tabIndicatorColor="@color/colorTabIndicator"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/colorFillColor"
            app:tabTextColor="@color/colorPrompt" />

    </LinearLayout>

</RelativeLayout>