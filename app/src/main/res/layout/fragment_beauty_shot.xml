<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_group_course_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/colorBottom">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_beauty_shot_tab"
            android:layout_height="45dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:tabTextColor="@color/colorPrompt"
            app:tabIndicatorColor="@color/colorTabIndicator"
            app:tabSelectedTextColor="@color/colorFillColor"
            app:tabIndicatorHeight="3dp"/>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_beauty_shot_tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_tab_bg">
    </android.support.v4.view.ViewPager>

</RelativeLayout>