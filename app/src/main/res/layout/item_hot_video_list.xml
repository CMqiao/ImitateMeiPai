<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_hot_video_list_item_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_hot_video_list_bottom_shadow">

                <com.yqb.imitatemeipai.widget.CircleImageView
                    android:id="@+id/iv_hot_video_list_avatar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:src="@mipmap/ic_video_list_avatar" />

                <TextView
                    android:id="@+id/tv_hot_video_list_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nick_name"
                    android:textColor="@color/colorTextWhite"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:lines="1"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/iv_hot_video_list_avatar" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_heart"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="3dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_toLeftOf="@+id/tv_hot_video_like_count"/>

                    <TextView
                        android:id="@+id/tv_hot_video_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="0"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorTextWhite"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>